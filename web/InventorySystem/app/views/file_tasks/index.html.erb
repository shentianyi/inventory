<p id="notice"><%= notice %></p>

<h1>Listing File Tasks</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Data file</th>
      <th>Err file</th>
      <th>Status</th>
      <th>Remark</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @file_tasks.each do |file_task| %>
      <tr>
        <td><%= file_task.user %></td>
        <td><%= file_task.data_file_id %></td>
        <td><%= file_task.err_file_id %></td>
        <td><%= file_task.status %></td>
        <td><%= file_task.remark %></td>
        <td><%= link_to 'Show', file_task %></td>
        <td><%= link_to 'Edit', edit_file_task_path(file_task) %></td>
        <td><%= link_to 'Destroy', file_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

